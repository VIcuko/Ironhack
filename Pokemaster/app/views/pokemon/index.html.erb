<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade" id="pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span id="pkmn-name">Feraligtr</span>
          <small id="pkmn-number">#160</small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Height</dt>
          <dd id="pkmn-height">23</dd>

          <dt>Weight</dt>
          <dd id="pkmn-weight">888</dd>

          <dt>HP</dt>
          <dd id="pkmn-hp">888</dd>

          <dt>Attack and Defense</dt>
          <dd><span id="pkmn-attack">888</span> - <span id="pkmn-defense">999</span></dd>

          <dt>Special Attack & Special Defense</dt>
          <dd><span id="pkmn-spa">888</span> - <span id="pkmn-spd"</dd>

          <dt>Speed</dt>
          <dd id="pkmn-speed">888</dd>

          <dt>Types</dt>
          <dd id="pkmn-types">888</dd>
        </dl>

        <h3>Description</h3>
        <p id="pkmn-description">This is the description</p>
        <div id="pkmn-img"></div>
        <button class="btn" id="pkmn-show-evolutions">Show evolutions</button>

      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->

<div class="modal fade" id="evolution-modal">
  <div class="modal-dialog">
    <div class="modal-content" style="height:500px; overflow: auto">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      <h3 class="modal-title">
        <span id="pkmn-name">Evolutions</span>
      </h3>
      </div><!-- .modal-header -->

      <div class="modal-body" id="pokmn-evolutions-body">
      </div>
    </div>
  </div>
</div>


